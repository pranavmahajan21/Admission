<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dimensions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="dimensions_TV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- used in about & contact page -->
    <style name="TV_label_green" parent="dimensions_TV">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <!-- used in ticket & order details & report & history page -->
    <style name="TV_label_green2" parent="dimensions_TV">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <!-- used in ticket & order details & history page -->
    <style name="TV_label_grey" parent="dimensions_TV">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <!-- used in ticket_details & order_details -->
    <style name="xyz" parent="dimensions">
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="textRedBold">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="textGreyNormal">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>

</resources>